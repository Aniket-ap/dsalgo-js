{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  